<div class="container">
  <div class="row">
    <div class="col">
      <%= image_tag image_path(@tv_show.hero_image.asset.url), class: "card-img-top", alt: @tv_show.title %>
    </div>
    <div class="col">
      <label>Title</label>
        <p><%= @tv_show.title %></p>
      <label>Plot</label>
        <p><%= @tv_show.plot %></p>
      <label>Year</label>
        <p><%= @tv_show.year %></p>
      <label>Genre</label>
        <p><%= @tv_show.genres.pluck(:name).join(", ") %></p>
      <label>Run Time</label>
        <p><%= @tv_show.run_time %></p>
      <label>IMDB Rating</label>
        <p><%= @tv_show.imdb_rating %></p>
    </div>
  </div>
</div>