div.container
  div.row
    div.col
      = image_tag image_path(@tv_show.hero_image.asset.url), class: "card-img-top", alt: @tv_show.title
    div.col
      label Title
      p = @tv_show.title
      label Plot
      p = @tv_show.plot
      label Year
      p = @tv_show.year
      label Genre
      p = @tv_show.genres.pluck(:name).join(", ")
      label Seasons
      p = @tv_show.seasons
      label IMDB Rating
      p = @tv_show.imdb_rating