<div class="container">
  <div class="row">
    <div class="col">
      <%= image_tag image_path(@tv_show.hero_image.asset.url), class: "card-img-top", alt: @tv_show.title %>
    </div>
    <div class="col">
      <h1><%= @tv_show.title %></h1>
      <p><%= @tv_show.plot %></p>
      <p><%= @tv_show.year %></p>
      <p><%= @tv_show.genre %></p>
      <p><%= @tv_show.seasons %></p>
      <p><%= @tv_show.imdb_rating %></p>
    </div>
  </div>
</div>
