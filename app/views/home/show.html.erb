<div class="container">
  <div class="row">
    <div class="col">
      <%= image_tag image_path(@movie.hero_image.asset.url), class: "card-img-top", alt: @movie.title %>
    </div>
    <div class="col">
      <h1><%= @movie.title %></h1>
      <p><%= @movie.plot %></p>
      <p><%= @movie.year %></p>
      <p><%= @movie.genre %></p>
      <p><%= @movie.run_time %></p>
      <p><%= @movie.imdb_rating %></p>
    </div>
  </div>
</div>
